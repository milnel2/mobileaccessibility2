<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ttt="http://schemas.android.com/apk/res/android_talking_software.development.talking_tap_twice"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:padding="15dip" android:orientation="vertical">
	<LinearLayout android:orientation="vertical"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_gravity="center" android:paddingLeft="20dip"
		android:paddingRight="20dip">
		
		<TextView
		android:id="@+id/title"
		android:text="@string/options_window_label"
			android:layout_height="fill_parent" android:layout_width="wrap_content"
			android:layout_gravity="center" android:layout_marginBottom="20dip"
			android:textSize="24sp" />
		<TableLayout 
		android:layout_height="fill_parent"
			android:layout_width="fill_parent" 
			android:layout_gravity="center"
			android:orientation="horizontal"
			android:background="#ff0000">
			<TableRow android:background="#99ffff" android:layout_margin="2dip">
				<android_talking_software.development.talking_tap_twice.accessible_view_extensions.CheckBoxTTT
					android:id="@+id/rotation_x_checkbox" 
					android:text="@string/rotation_x_label" android:layout_weight="1" android:textColor = "#000000"
					android:layout_height="wrap_content"
					android:layout_width="0dip" 
					/>

								<android_talking_software.development.talking_tap_twice.accessible_view_extensions.CheckBoxTTT
					android:id="@+id/rotation_z_checkbox" 
					android:layout_height="wrap_content"
					android:text="@string/rotation_z_label" android:layout_weight="1" android:textColor = "#000000"
					android:layout_width="0dip" />

			</TableRow>
			
			<TableRow android:background="#99ffff" android:layout_margin="2dip">
			  								<android_talking_software.development.talking_tap_twice.accessible_view_extensions.CheckBoxTTT
					android:id="@+id/at_x_checkbox" 
					android:text="@string/at_x_label" android:layout_weight="1" android:textColor = "#000000"
					android:layout_height="wrap_content"
					android:layout_width="0dip" />

			  <android_talking_software.development.talking_tap_twice.accessible_view_extensions.CheckBoxTTT
					android:id="@+id/at_z_checkbox" 
					android:text="@string/at_z_label" android:layout_weight="1" android:textColor = "#000000"
android:layout_height="wrap_content"
										android:layout_width="0dip" />
				></TableRow>

			<TableRow android:background="#99ffff" android:layout_margin="2dip">
				<android_talking_software.development.talking_tap_twice.accessible_view_extensions.CheckBoxTTT
					android:id="@+id/angle_x_checkbox"
					android:text="@string/angle_x_label" android:layout_weight="1" android:textColor = "#000000"
					android:layout_height="wrap_content"
					android:layout_width="0dip" />

								<android_talking_software.development.talking_tap_twice.accessible_view_extensions.CheckBoxTTT
					android:id="@+id/angle_z_checkbox" 
					android:text="@string/angle_z_label" android:layout_weight="1" android:textColor = "#000000"
android:layout_height="wrap_content"
										android:layout_width="0dip" />
										</TableRow>	
										
<TableRow android:background="#99ffff" android:layout_margin="2dip">
				<android_talking_software.development.talking_tap_twice.accessible_view_extensions.CheckBoxTTT
					android:id="@+id/from_x_checkbox" 
					android:text="@string/from_x_label" android:layout_weight="1" android:textColor = "#000000"
android:layout_height="wrap_content"
										android:layout_width="0dip" />

				<android_talking_software.development.talking_tap_twice.accessible_view_extensions.CheckBoxTTT
					android:id="@+id/from_z_checkbox" 
					android:text="@string/from_z_label" android:layout_weight="1" android:textColor = "#000000"
android:layout_height="wrap_content"
										android:layout_width="0dip" />
			</TableRow>
			
			<TableRow android:background="#99ffff" android:layout_margin="2dip">
				<android_talking_software.development.talking_tap_twice.accessible_view_extensions.ButtonTTT
					android:id="@+id/okay_button" 
ttt:method="okay" 
android:text="@string/okay_label"
					android:layout_height="wrap_content"
					android:layout_weight="1" android:textColor = "#000000"
					android:layout_width="0dip"/>

				<android_talking_software.development.talking_tap_twice.accessible_view_extensions.ButtonTTT
					android:id="@+id/cancel_button" 
					ttt:method="cancel" 
					android:text="@string/cancel_label"
android:layout_height="wrap_content"
										android:layout_weight="1" android:textColor = "#000000"
					android:layout_width="0dip"/>
			</TableRow>
		<TableRow 
								android:layout_height="fill_parent">
								</TableRow>
</TableLayout>
	</LinearLayout>
</LinearLayout>