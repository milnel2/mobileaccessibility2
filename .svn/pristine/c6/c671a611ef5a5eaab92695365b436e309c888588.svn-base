<?xml version="1.0" encoding="utf-8" ?> 

<android.gesture.GestureOverlayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gestures"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"   
    android:gestureStrokeType="multiple"
    android:eventsInterceptionEnabled="false"
    android:orientation="horizontal"    >
    <LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/ilayout"
	android:orientation="vertical"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"	>	
		<Button android:id="@+id/keypad_blank"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:focusableInTouchMode="true"
			android:background="@color/background"
			android:textSize="1sp"
			android:tag=""
			android:text=""
	 	/>
    	<Button android:id="@+id/instr_read_button" 
		  	android:focusableInTouchMode="true"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textSize="30.0sp"
			android:text="@string/instr_read_label"
			android:tag="@string/instr_read_tag"
			android:layout_weight="2"
 		/> 
  		<Button android:id="@+id/instr_write_button" 
		  	android:focusableInTouchMode="true"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="wrap_content" 
		  	android:textSize="30.0sp"
		  	android:text="@string/instr_write_label"
		  	android:tag="@string/instr_write_tag"
		  	android:layout_weight="2"
		/> 
		<Button android:id="@+id/instr_words_button" 
		  	android:focusableInTouchMode="true"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="wrap_content" 
		  	android:textSize="30.0sp"
		  	android:text="@string/instr_words_label"
		  	android:tag="@string/instr_words_tag"
		  	android:layout_weight="2"
		/> 
  		<Button android:id="@+id/instr_back_button" 
		  	android:focusableInTouchMode="true"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="wrap_content" 
		  	android:textSize="30.0sp"
		  	android:text="@string/instr_back_label"
		  	android:tag="@string/back_tag"
		  	android:layout_weight="2"
 		/> 
  		
  	</LinearLayout>
  		
</android.gesture.GestureOverlayView>