<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">

    	<LinearLayout 
 		    android:orientation="vertical"
    	 	android:layout_width="fill_parent"
     		android:layout_height="fill_parent"
     		android:layout_weight="0.8">
     		<TextView  
      			android:text="@string/care_taker"
      			android:layout_width="fill_parent" 
      			android:layout_height="wrap_content" 
    			android:textColor="#000000"
      			android:textSize="30dp"
      			android:layout_marginBottom="10dp"
      			android:gravity="center"/>
  			<Button android:id="@+id/care_taker_build_schedule"
   				android:text="@string/build_schedule"
      			android:layout_width="fill_parent"
     			android:layout_height="wrap_content"
     			android:textColor="#000000"
      			android:textSize="20dp" 
      			android:layout_marginLeft="5dp"
      			android:layout_marginRight="5dp"
      			android:layout_marginBottom="10dp" 
      			android:layout_weight="0.33"/> 
  			<Button android:id="@+id/care_taker_tasks_modifier"
   				android:text="@string/tasks_modifier"
      			android:layout_width="fill_parent"
     			android:layout_height="wrap_content"
     			android:textColor="#000000"
      			android:textSize="20dp" 
      			android:layout_marginLeft="5dp"
      			android:layout_marginRight="5dp"
      			android:layout_marginBottom="10dp" 
      			android:layout_weight="0.33"/> 
  			<LinearLayout
          		android:orientation="horizontal"
       			android:layout_width="fill_parent"
       			android:layout_height="wrap_content">
  				<Button android:id="@+id/care_taker_help"
       				android:text="@string/help"
       				android:layout_width="fill_parent"
       				android:layout_height="fill_parent"
       				android:textColor="#000000"
       				android:textSize="18dp"
       				android:layout_weight="0.5"/>
  				<Button android:id="@+id/care_taker_exit" 
       				android:text="@string/exit"
			       	android:layout_width="fill_parent"
       				android:layout_height="fill_parent"
       				android:textColor="#000000"
       				android:gravity="center"
       				android:textSize="18dp"
       				android:layout_weight="0.5"/>
     		</LinearLayout> 
		</LinearLayout>

</LinearLayout>