<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ttt="http://schemas.android.com/apk/res/android_talking_software.development.talking_tap_twice"
	android:id="@+id/level"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:padding="15dip" 
	android:orientation="vertical">
	<LinearLayout 
		android:orientation="vertical"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:layout_gravity="center" 
		android:paddingLeft="20dip"
		android:paddingRight="20dip">
		<TextView
		android:id="@+id/title" 
		android:text="@string/app_name"
			android:layout_height="fill_parent" 
			android:layout_width="fill_parent"
			android:layout_gravity="center" 
			android:layout_marginBottom="20dip"
			android:textSize="24sp"
			android:layout_weight="1"  />
				<TextView
				android:id="@+id/display"
			android:layout_height="60dip" 
			android:layout_width="fill_parent"
			android:layout_gravity="center" 
			android:layout_marginBottom="20dip"
			android:textSize="24sp" />
			<TableLayout
android:layout_height="fill_parent" 
			android:layout_width="fill_parent"
			android:layout_gravity="center"
			android:orientation="horizontal">
			<TableRow>
									<android_talking_software.development.talking_tap_twice.accessible_view_extensions.ButtonTTT 
android:id="@+id/options_button"
ttt:method="showOptionsDialog"
android:text="@string/options_label"
android:layout_weight="1" 
android:layout_width="0dip"
android:layout_height="100dip"
		/>
									<android_talking_software.development.talking_tap_twice.accessible_view_extensions.ButtonTTT
									ttt:method="exit"
									android:id="@+id/exit_button" android:text="@string/exit_label" android:layout_weight="1" android:layout_width="0dip"
android:layout_height="100dip"
											/>
		</TableRow>
									</TableLayout>
	</LinearLayout>
	</LinearLayout>