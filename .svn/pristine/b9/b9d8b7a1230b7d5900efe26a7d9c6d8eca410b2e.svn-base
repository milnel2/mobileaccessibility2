<?xml version="1.0" encoding="utf-8" ?> 
<android.gesture.GestureOverlayView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gestures"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"   
    android:gestureStrokeType="multiple"
    android:eventsInterceptionEnabled="false"
    android:orientation="horizontal"    >
    <LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/mlayout"
	android:orientation="vertical"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"	>
		<Button android:id="@+id/keypad_blank"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:focusableInTouchMode="true"
			android:textSize="1sp"
			android:background="@color/background"
			android:tag=""
			android:text=""
	 	/>
		<Button android:id="@+id/shop_button" 
		  	android:focusableInTouchMode="true"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="wrap_content" 
		  	android:textSize="30.0sp"
		  	android:text="@string/shop_button_label"
		  	android:tag="@string/shop_button_tag"
		  	android:layout_weight="2"
		/> 
    	<Button android:id="@+id/play_read_button" 
		  	android:focusableInTouchMode="true"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textSize="30.0sp"
			android:text="@string/play_read_label"
			android:tag="@string/play_read_tag"
			android:layout_weight="2"
 		/> 
  		<Button android:id="@+id/play_write_button" 
		  	android:focusableInTouchMode="true"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="wrap_content" 
		  	android:textSize="30.0sp"
		  	android:text="@string/play_write_label"
		  	android:tag="@string/play_write_tag"
		  	android:layout_weight="2"
		/> 
  		<Button android:id="@+id/play_word_button" 
		  	android:focusableInTouchMode="true"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="wrap_content" 
		  	android:textSize="30.0sp"
		  	android:text="@string/play_word_label"
		  	android:tag="@string/play_word_tag"
		  	android:layout_weight="2"
 		/> 
  		<Button android:id="@+id/play_back_button" 
		  	android:focusableInTouchMode="true"
		  	android:layout_width="fill_parent" 
		  	android:layout_height="wrap_content" 
		  	android:textSize="30.0sp"
		  	android:text="@string/play_back_label"
		  	android:tag="@string/back_tag"
		  	android:layout_weight="2"
 		/> 
  	</LinearLayout>
  		
</android.gesture.GestureOverlayView>