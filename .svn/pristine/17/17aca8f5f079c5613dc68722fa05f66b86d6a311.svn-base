<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cs.washington.edu.vbreader"
      android:versionCode="11"
      android:versionName="2.4.498">
    <application android:icon="@drawable/icon" android:label="@string/app_name"
    			 android:debuggable="true" 
    			 android:name="cs.washington.edu.vbreader.GlobalState">
        <activity android:name=".VBReader"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" 
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="cs.washington.edu.vbreader.VB_READER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".InputSelectionMenu"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                  android:screenOrientation="portrait"
				  android:configChanges="keyboardHidden|orientation"
                  android:debuggable="true">
        </activity>
        
        <!--  Options called from AccessibleMenu menu -->
        <activity android:name=".Keypad"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                  android:screenOrientation="landscape"
                  android:debuggable="true">
            <intent-filter>
                <action android:name="cs.washington.edu.vbreader.SOFT_KEYPAD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".VoiceInput"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                  android:screenOrientation="portrait"
                  android:debuggable="true">
            <intent-filter>
                <action android:name="cs.washington.edu.vbreader.SPEECH_INPUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TapHoldInput"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                  android:screenOrientation="portrait"
                  android:debuggable="true">
            <intent-filter>
                <action android:name="cs.washington.edu.vbreader.TAP_HOLD_INPUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TCKeypad"
        	android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
			<intent-filter>
                <action android:name="cs.washington.edu.vbreader.SIMPLE_KEYPAD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!--  Retain this activity definition always as part of any AccessibleMenu package implementation -->
        <activity android:name=".UnknownActivity"
                  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                  android:debuggable="true">
            <intent-filter>
                <action android:name="cs.washington.edu.vbreader.UNKNOWN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>
    <uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
</manifest> 