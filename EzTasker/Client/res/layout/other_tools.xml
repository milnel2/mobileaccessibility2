<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:weightSum="1">
	 <TextView  
      			android:text="@string/other_tools"
      			android:layout_width="fill_parent" 
      			android:layout_height="wrap_content" 
    			android:textColor="#000000"
      			android:textSize="30dp"
      			android:gravity="center"/>
    	<LinearLayout 
 		    android:orientation="vertical"
    	 	android:layout_width="fill_parent"
     		android:layout_height="fill_parent"
     		android:background="@color/background"
     		android:layout_weight="0.8"
     		android:weightSum="1">
  		<Button android:id="@+id/other_tools_search"
      			android:text="@string/search_task"
      			android:layout_width="fill_parent"
     			android:layout_height="wrap_content"
     			android:textColor="#000000"
       			android:layout_margin ="5dp"    
      			android:layout_weight="0.33"
      			android:textSize="18dp"/>
      	<Button android:id="@+id/other_tools_face"
      			android:text="Face Library"
      			android:layout_width="fill_parent"
     			android:layout_height="wrap_content"
     			android:textColor="#000000"
       			android:layout_margin ="5dp"
       			android:layout_weight="0.33"  
      			android:textSize="18dp" />
      	<Button android:id="@+id/other_tools_notepad"
      			android:text="Notepad"
      			android:layout_width="fill_parent"
     			android:layout_height="wrap_content"
     			android:textColor="#000000"
       			android:layout_margin ="5dp"
       			android:layout_weight="0.33"   
      			android:textSize="18dp" />
     		<LinearLayout
          		android:orientation="horizontal"
       			android:layout_width="fill_parent"
       			android:layout_height="wrap_content"
       			android:layout_weight ="0.2"
       			android:layout_margin ="5dp" >
  				<Button android:id="@+id/other_tools_help"
       				android:text="@string/help"
       				android:layout_width="fill_parent"
       				android:layout_height="wrap_content"
       				android:textColor="#000000"
       				android:textSize="18dp"
       				android:layout_weight="0.5"/>
  				<Button android:id="@+id/other_tools_goback" 
       				android:text="@string/go_back"
			       	android:layout_width="fill_parent"
       				android:layout_height="wrap_content"
       				android:textColor="#000000"
       				android:gravity="center"
       				android:textSize="18dp"
       				android:layout_weight="0.5"/>
     		</LinearLayout> 
		</LinearLayout>

</LinearLayout>